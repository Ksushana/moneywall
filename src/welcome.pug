extends pug/layout.pug

block variables
  - let isMain = true;
  - let bodyClasses = 'welcome';

block content
  .container-top
    .container
      .container__header( class=(isMain ? "none" : null ) )
          h1 Добро пожаловать<span class="new"> в Moneywall — сервис оплаты частями</span><span class="old">, Ирина</span>
          +link-text("Паспортные данные", "#", "container__link container__photo" )

  .container
    .contracts
      .contract__item.contract__item--new
        h3 Договор <span>03597</span>
        table
          tr
            td дата начала
            td 01.05.2020
          tr
            td дата окончания
            td 21.05.2020
          tr
            td Страна
            td RU
          tr
            td город
            td Владивосток

        button.btn-blue Подписать
      p.contracts__note Перед тем, как вы подпишите первый договор, нужно будет заполнить <a href="#" >паспортные данные</a>
